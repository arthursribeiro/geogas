     -->
     
    <bean id="gasStationDAOFlex" class="br.edu.ufcg.geogas.dao.GasStationDAOFlex" scope="singleton">
		
	</bean>
	
     
    <bean id="postoCombustivel" class="br.edu.ufcg.geogas.service.flex.PostoCombustivelServiceFlex">
    	<property name="gasStationDAOFlex" ref="gasStationDAOFlex" />
	</bean> 
	
	<flex:message-broker />
 
	<context:annotation-config />
	
	<context:component-scan base-package="br.edu.ufcg.geogas.dao" />
	
	<context:component-scan base-package="br.edu.ufcg.geogas.service.flex" />
	
</beans>