<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:padding="30dip"
	android:orientation="horizontal" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:gravity="center"
	    >
		<TextView
			android:text="@string/tituloApp"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_gravity="center"
			android:layout_marginBottom="25dip"
			android:textSize="24.5sp" android:textColor="@color/textColor"/>
		<Button
			android:id="@+id/allPlacesActionButton"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/allPlacesAction" />
		<Button
			android:id="@+id/gasStationActionButton"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/gasStationAction" />
	</LinearLayout>
</LinearLayout>