<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
		<constant name="struts.objectFactory" value="spring" />
		<constant name="struts.devMode" value="false" />
    	<package name="smartgathering" extends="struts-default">
    	
    	<!-- http://<endereço servidor>/getGasStation?id=<numId> -->
    	<action name="getGasStation" class="gasStationAction" method="getGasStationById" >
	    </action>
	    
	    <!-- http://<endereço servidor>/getGasStation?id=<numId> -->
    	<action name="getGasStationByCnpj" class="gasStationAction" method="getGasStationByCnpj" >
	    </action>
	    
	    <!-- http://<endereço servidor>/getAllPlaces -->
	    <action name="getAllPlaces" class="gasStationAction" method="getAllGasStations" >
	    </action>
	    
	    <!-- http://<endereço servidor>/getAllPlacesBBox?longMin=<longMin>&longMax=<longMax>&latMin=<latMin>&latMax=<latMax> -->
	    <action name="getAllPlacesByBBox" class="gasStationAction" method="getAllGasStationsByBBox" >
	    </action>
	    
	    <!-- http://<endereço servidor>/getAllPlacesState?state=<state> -->
	    <action name="getAllPlacesByState" class="gasStationAction" method="getAllGasStationsByState" >
	    </action>
	    
	    <!-- http://<endereço servidor>/getAllPlacesByCity?state=<state>&city=<city> -->
	    <action name="getAllPlacesByCity" class="gasStationAction" method="getAllGasStationsByCity" >
	    </action>
	    
	    <!-- http://<endereço servidor>/getAllPlacesByCityXML?state=<state>&city=<city> -->
	    <action name="getAllPlacesByCityXML" class="gasStationAction" method="getAllGasStationsByCityXML" >
	    </action>
	    
	    <!-- http://<endereço servidor>/geocodingState -->
    	<action name="geocodingState" class="gasStationAction" method="geocodingState" >
	    </action>
	    
	    <action name="kml" class="gasStationAction" method="giveGasStationsKML" >
	    </action>
	    
	    <action name="getStates" class="gasStationAction" method="getStates" >
	    </action>
	    
	    <action name="getCities" class="gasStationAction" method="getCities" >
	    </action>
	    
	    <action name="getStatesXML" class="gasStationAction" method="getStatesXML" >
	    </action>
	    
	    <action name="getCitiesXML" class="gasStationAction" method="getCitiesXML" >
	    </action>
	    
	    
